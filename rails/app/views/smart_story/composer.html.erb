<%= javascript_include_tag "composer", "data-turbolinks-track" => true %>

<div id="app-wrapper">
<div id="main" class="col-xs-8 no-padding">
	
	<div class="story-page">
		<% @page.story_images.each do |p|%>
			<% image_tag p.file_url, :height => "100%" %>
		<% end %>
		<% @page.story_texts.each do |t|%>
			<% pos = JSON.parse(t.center) %>
			<p class="story-text" style="<%= "font-size: #{t.fontSize}pt; background-color: ##{t.textBackgroundHex}; opacity: #{t.textBackgroundAlpha}; width: 500px; text-align: center;margin-left: -250px; border: solid #{t.border}px black; top: #{pos[0] * 100}%; left: #{pos[1] * 100}%;"%>"> <%= t.text %> </p>
		<% end %>
	</div>
	<div id="track">
		I am the track. 
	</div>
</div>
<div id="sidebar" class="col-xs-4 no-padding">

	<%= render :partial => "composer/smart_story_selector" %>
	<% render :partial => "composer/library_selector" %>
	<% render :partial => "composer/wave_view" %>
</div>
</div>

