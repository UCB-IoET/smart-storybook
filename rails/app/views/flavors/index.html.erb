<%= render "library/tabs" %>

<h3>Flavor Library</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Alpha</th>
      <th>Img</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @flavors.each do |flavor| %>
      <tr>
        <td><%= flavor.name %></td>
        <td><%= flavor.alpha %></td>
        <td><%= image_tag(flavor.img_url, :width => 100) if flavor.img.present? %></td>
        <td><%= link_to 'Show', flavor %></td>
        <td><%= link_to 'Edit', edit_flavor_path(flavor) %></td>
        <td><%= link_to 'Destroy', flavor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flavor', new_flavor_path %>
