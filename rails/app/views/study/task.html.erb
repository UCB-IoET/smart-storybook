<h1>Listing tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= link_to "Start", composer_path, class: "btn btn-primary" %></td>
        <td><%= link_to 'Done', edit_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>



